<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/neutral_05">

    <ImageView
        android:id="@+id/imv_video_previous"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_video_previous"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imv_video_backward"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imv_video_backward"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_video_backward"
        app:layout_constraintEnd_toStartOf="@id/imv_video_play"
        app:layout_constraintStart_toEndOf="@id/imv_video_previous"
        app:layout_constraintTop_toTopOf="@id/imv_video_previous" />

    <ImageView
        android:id="@+id/imv_video_play"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/ic_video_play"
        app:layout_constraintBottom_toBottomOf="@id/imv_video_previous"
        app:layout_constraintEnd_toStartOf="@id/imv_video_forward"
        app:layout_constraintStart_toEndOf="@id/imv_video_backward"
        app:layout_constraintTop_toTopOf="@id/imv_video_previous" />

    <ImageView
        android:id="@+id/imv_video_forward"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_video_forward"
        app:layout_constraintEnd_toStartOf="@id/imv_video_next"
        app:layout_constraintStart_toEndOf="@id/imv_video_play"
        app:layout_constraintTop_toTopOf="@id/imv_video_previous" />

    <ImageView
        android:id="@+id/imv_video_next"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_video_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imv_video_forward"
        app:layout_constraintTop_toTopOf="@id/imv_video_previous" />

    <TextView
        android:id="@+id/tv_current_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/neutral_06"
        android:textSize="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <SeekBar
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:progressBackgroundTint="@color/neutral_06"
        app:layout_constraintBottom_toBottomOf="@id/tv_current_time"
        app:layout_constraintEnd_toStartOf="@id/tv_duration"
        app:layout_constraintStart_toEndOf="@id/tv_current_time"
        app:layout_constraintTop_toTopOf="@id/tv_current_time" />

    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/neutral_06"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imv_video_play" />
</androidx.constraintlayout.widget.ConstraintLayout>