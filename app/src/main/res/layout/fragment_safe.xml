<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.home.setting.safe.FragmentSafe">

        <include
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:id="@+id/container_lock"
            layout="@layout/layout_item_custom_single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:id="@+id/container_password_recovery_question"
            layout="@layout/layout_item_custom_single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/container_lock" />

        <include
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:id="@+id/container_fingerprint_unlock"
            layout="@layout/layout_item_custom_double"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/container_password_recovery_question" />

        <include
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:id="@+id/container_fingerprint_lock_display"
            layout="@layout/layout_item_custom_double"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/container_fingerprint_unlock" />

        <include
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:id="@+id/container_screen_off_action"
            layout="@layout/layout_item_custom_double"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/container_fingerprint_lock_display" />

        <include
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:id="@+id/container_lock_when_leaving"
            layout="@layout/layout_item_custom_double"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/container_screen_off_action" />

<!--        <include-->
<!--            android:layout_marginHorizontal="@dimen/_12sdp"-->
<!--            android:id="@+id/container_temporary_file_deletion_time"-->
<!--            layout="@layout/layout_item_custom_double"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            app:layout_constraintTop_toBottomOf="@id/container_lock_when_leaving" />-->
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
