<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_hideable="true"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"

    tools:background="@color/blur"
    tools:ignore="ContentDescription">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:background="@drawable/bg_neu01_corner_8"
        android:paddingBottom="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imv_title"
            android:layout_width="@dimen/_44sdp"
            android:layout_height="@dimen/_44sdp"
            android:padding="@dimen/_12sdp"
            android:src="@drawable/ic_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/app_font_500"
            android:text="@string/detail"
            android:textColor="@color/neutral_06"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintBottom_toBottomOf="@id/imv_title"
            app:layout_constraintStart_toEndOf="@id/imv_title"
            app:layout_constraintTop_toTopOf="@id/imv_title" />


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:fontFamily="@font/app_font_500"
            android:text="@string/name_detail"
            android:textColor="@color/neutral_06"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintBottom_toBottomOf="@id/tv_name_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_name_value" />

        <TextView
            android:id="@+id/tv_name_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/app_font_400"
            android:text="@string/name_detail"
            android:textColor="@color/neutral_06"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_name"
            app:layout_constraintTop_toBottomOf="@id/imv_title" />


        <TextView
            android:id="@+id/tv_size"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:fontFamily="@font/app_font_500"
            android:text="@string/size_detail"
            android:textColor="@color/neutral_06"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintBottom_toBottomOf="@id/tv_size_value"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            app:layout_constraintTop_toTopOf="@id/tv_size_value" />

        <TextView
            android:id="@+id/tv_size_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/app_font_400"
            android:text="@string/name_detail"
            android:textColor="@color/neutral_06"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_size"
            app:layout_constraintTop_toBottomOf="@id/tv_name_value" />

        <TextView
            android:id="@+id/tv_resolution"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:fontFamily="@font/app_font_500"
            android:text="@string/resolution_detail"
            android:textColor="@color/neutral_06"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintBottom_toBottomOf="@id/tv_resolution_value"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            app:layout_constraintTop_toTopOf="@id/tv_resolution_value" />

        <TextView
            android:id="@+id/tv_resolution_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/app_font_400"
            android:text="@string/name_detail"
            android:textColor="@color/neutral_06"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_resolution"
            app:layout_constraintTop_toBottomOf="@id/tv_size_value" />


        <TextView
            android:id="@+id/tv_path"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:fontFamily="@font/app_font_500"
            android:text="@string/path_detail"
            android:textColor="@color/neutral_06"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintBottom_toBottomOf="@id/tv_path_value"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            app:layout_constraintTop_toTopOf="@id/tv_path_value" />

        <TextView
            android:id="@+id/tv_path_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/app_font_400"
            android:text="@string/name_detail"
            android:textColor="@color/neutral_06"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_path"
            app:layout_constraintTop_toBottomOf="@id/tv_resolution_value" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:fontFamily="@font/app_font_500"
            android:text="@string/time_detail"
            android:textColor="@color/neutral_06"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintBottom_toBottomOf="@id/tv_time_value"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            app:layout_constraintTop_toTopOf="@id/tv_time_value" />

        <TextView
            android:id="@+id/tv_time_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/app_font_400"
            android:text="@string/name_detail"
            android:textColor="@color/neutral_06"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintStart_toEndOf="@id/tv_time"
            app:layout_constraintTop_toBottomOf="@id/tv_path_value" />

        <TextView
            android:id="@+id/tv_time_lock"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:fontFamily="@font/app_font_500"
            android:text="@string/time_lock_detail"
            android:textColor="@color/neutral_06"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintBottom_toBottomOf="@id/tv_time_lock_value"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            app:layout_constraintTop_toTopOf="@id/tv_time_lock_value" />

        <TextView
            android:id="@+id/tv_time_lock_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/app_font_400"
            android:text="@string/name_detail"
            android:textColor="@color/neutral_06"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_time_lock"
            app:layout_constraintTop_toBottomOf="@id/tv_time_value" />


        <TextView
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@drawable/bg_primary_corner_10"
            android:foreground="@drawable/fg_ripple_effect"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_32sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:text="@string/custom_ok"
            android:textColor="@color/neutral_01"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_time_lock" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>