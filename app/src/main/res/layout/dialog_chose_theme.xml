<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:background="@drawable/bg_neu01_corner_8"
        android:paddingVertical="@dimen/_12sdp"
        android:paddingBottom="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imv_change_theme"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:src="@drawable/ic_change_theme"
            app:layout_constraintBottom_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_title" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/app_font_500"
            android:paddingHorizontal="@dimen/_12sdp"
            android:text="@string/choose_theme"
            android:textColor="@color/neutral_06"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imv_change_theme"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/imv_change_theme">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_choose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">


                <CheckBox
                    android:id="@+id/theme_default"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:button="@null"
                    android:background="@drawable/bg_checkbox_default_theme_selector"
                    app:layout_constraintEnd_toStartOf="@id/theme_01"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <CheckBox
                    android:id="@+id/theme_01"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:button="@null"
                    android:background="@drawable/bg_checkbox_theme_01_selector"
                    app:layout_constraintEnd_toStartOf="@id/theme_02"
                    app:layout_constraintStart_toEndOf="@id/theme_default"
                    app:layout_constraintTop_toTopOf="@id/theme_default" />

                <CheckBox
                    android:id="@+id/theme_02"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:button="@null"
                    android:background="@drawable/bg_checkbox_theme_02_selector"
                    app:layout_constraintEnd_toStartOf="@id/theme_03"
                    app:layout_constraintStart_toEndOf="@id/theme_01"
                    app:layout_constraintTop_toTopOf="@id/theme_default" />

                <CheckBox
                    android:id="@+id/theme_03"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:button="@null"
                    android:background="@drawable/bg_checkbox_theme_03_selector"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/theme_02"
                    app:layout_constraintTop_toTopOf="@id/theme_default" />

                <CheckBox
                    android:id="@+id/theme_04"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:button="@null"
                    android:background="@drawable/bg_checkbox_theme_04_selector"
                    app:layout_constraintEnd_toStartOf="@id/theme_05"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/theme_default" />

                <CheckBox
                    android:id="@+id/theme_05"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:button="@null"
                    android:background="@drawable/bg_checkbox_theme_05_selector"
                    app:layout_constraintEnd_toStartOf="@id/theme_06"
                    app:layout_constraintStart_toEndOf="@id/theme_04"
                    app:layout_constraintTop_toTopOf="@id/theme_04" />

                <CheckBox
                    android:id="@+id/theme_06"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:button="@null"
                    android:background="@drawable/bg_checkbox_theme_06_selector"
                    app:layout_constraintEnd_toStartOf="@id/theme_07"
                    app:layout_constraintStart_toEndOf="@id/theme_05"
                    app:layout_constraintTop_toTopOf="@id/theme_04" />

                <CheckBox
                    android:id="@+id/theme_07"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:button="@null"
                    android:background="@drawable/bg_checkbox_theme_07_selector"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/theme_06"
                    app:layout_constraintTop_toTopOf="@id/theme_04" />

                <CheckBox
                    android:id="@+id/theme_08"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:button="@null"
                    android:background="@drawable/bg_checkbox_theme_08_selector"
                    app:layout_constraintEnd_toStartOf="@id/theme_09"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/theme_04" />

                <CheckBox
                    android:id="@+id/theme_09"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:button="@null"
                    android:background="@drawable/bg_checkbox_theme_09_selector"
                    app:layout_constraintEnd_toStartOf="@id/theme_10"
                    app:layout_constraintStart_toEndOf="@id/theme_08"
                    app:layout_constraintTop_toTopOf="@id/theme_08" />

                <CheckBox
                    android:id="@+id/theme_10"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:button="@null"
                    android:background="@drawable/bg_checkbox_theme_10_selector"
                    app:layout_constraintEnd_toStartOf="@id/theme_11"
                    app:layout_constraintStart_toEndOf="@id/theme_09"
                    app:layout_constraintTop_toTopOf="@id/theme_08" />

                <CheckBox
                    android:id="@+id/theme_11"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:button="@null"
                    android:background="@drawable/bg_checkbox_theme_11_selector"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/theme_10"
                    app:layout_constraintTop_toTopOf="@id/theme_08" />

                <CheckBox
                    android:id="@+id/theme_12"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:button="@null"
                    android:background="@drawable/bg_checkbox_theme_12_selector"
                    app:layout_constraintEnd_toStartOf="@id/theme_13"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/theme_08" />

                <CheckBox
                    android:id="@+id/theme_13"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:button="@null"
                    android:background="@drawable/bg_checkbox_theme_13_selector"
                    app:layout_constraintEnd_toStartOf="@id/theme_14"
                    app:layout_constraintStart_toEndOf="@id/theme_12"
                    app:layout_constraintTop_toTopOf="@id/theme_12" />

                <CheckBox
                    android:id="@+id/theme_14"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:button="@null"
                    android:background="@drawable/bg_checkbox_theme_14_selector"
                    app:layout_constraintEnd_toStartOf="@id/theme_15"
                    app:layout_constraintStart_toEndOf="@id/theme_13"
                    app:layout_constraintTop_toTopOf="@id/theme_12" />

                <CheckBox
                    android:id="@+id/theme_15"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:button="@null"
                    android:background="@drawable/bg_checkbox_theme_15_selector"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/theme_14"
                    app:layout_constraintTop_toTopOf="@id/theme_12" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_custom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_12sdp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent">


                <View
                    android:id="@+id/theme_showcase"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/edt_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:minWidth="@dimen/_60sdp"
                    android:text="#2BCBF"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/theme_showcase" />

                <TextView
                    android:id="@+id/tv_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:fontFamily="@font/app_font_400"
                    android:text="R"
                    android:textColor="@color/neutral_06"
                    android:textSize="@dimen/_14sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/edt_value" />

                <SeekBar
                    android:id="@+id/seek_r"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_r"
                    app:layout_constraintEnd_toStartOf="@id/tv_value_r"
                    app:layout_constraintStart_toEndOf="@id/tv_r"
                    app:layout_constraintTop_toTopOf="@id/tv_r"
                    app:sb_show_thumb_text="true" />

                <TextView
                    android:id="@+id/tv_value_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/app_font_400"
                    android:gravity="start"
                    android:minWidth="@dimen/_30sdp"
                    android:textColor="@color/neutral_06"
                    android:textSize="@dimen/_14sdp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_r"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_r" />

                <TextView
                    android:id="@+id/tv_g"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:fontFamily="@font/app_font_400"
                    android:text="G"
                    android:textColor="@color/neutral_06"
                    android:textSize="@dimen/_14sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_r" />

                <SeekBar
                    android:id="@+id/seek_g"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/tv_g"
                    app:layout_constraintEnd_toEndOf="@id/seek_r"
                    app:layout_constraintStart_toStartOf="@id/seek_r"
                    app:layout_constraintTop_toTopOf="@id/tv_g"
                    app:sb_progress="76.9"
                    app:sb_progress_value_float="true"
                    app:sb_show_indicator="none"
                    app:sb_show_thumb_text="true" />

                <TextView
                    android:id="@+id/tv_value_g"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/app_font_400"
                    android:gravity="start"
                    android:minWidth="@dimen/_30sdp"
                    android:textColor="@color/neutral_06"
                    android:textSize="@dimen/_14sdp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_g"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tv_value_r"
                    app:layout_constraintTop_toTopOf="@id/tv_g" />

                <TextView
                    android:id="@+id/tv_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:fontFamily="@font/app_font_400"
                    android:text="B"
                    android:textColor="@color/neutral_06"
                    android:textSize="@dimen/_14sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_g" />

                <SeekBar
                    android:id="@+id/seek_b"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/tv_b"
                    app:layout_constraintEnd_toEndOf="@id/seek_r"
                    app:layout_constraintStart_toStartOf="@id/seek_r"
                    app:layout_constraintTop_toTopOf="@id/tv_b"
                    app:sb_progress="76.9"
                    app:sb_progress_value_float="true"
                    app:sb_show_indicator="none"
                    app:sb_show_thumb_text="true" />

                <TextView
                    android:id="@+id/tv_value_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/app_font_400"
                    android:gravity="start"
                    android:minWidth="@dimen/_30sdp"
                    android:textColor="@color/neutral_06"
                    android:textSize="@dimen/_14sdp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_b"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tv_value_r"
                    app:layout_constraintTop_toTopOf="@id/tv_b" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14sdp"
            android:fontFamily="@font/app_font_500"
            android:foreground="@drawable/fg_ripple_effect"
            android:paddingHorizontal="@dimen/_24sdp"
            android:paddingVertical="@dimen/_12sdp"
            android:text="@string/custom"
            android:textColor="@color/theme_default"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/container_content" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/app_font_500"
            android:foreground="@drawable/fg_ripple_effect"
            android:paddingHorizontal="@dimen/_12sdp"
            android:paddingVertical="@dimen/_12sdp"
            android:text="@string/cancel"
            android:textColor="@color/theme_default"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintBottom_toBottomOf="@id/tv_custom"
            app:layout_constraintEnd_toStartOf="@id/tv_ok"
            app:layout_constraintTop_toTopOf="@id/tv_custom" />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/app_font_500"
            android:foreground="@drawable/fg_ripple_effect"
            android:paddingHorizontal="@dimen/_12sdp"
            android:paddingVertical="@dimen/_12sdp"
            android:text="@string/custom_ok"
            android:textColor="@color/theme_default"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintBottom_toBottomOf="@id/tv_custom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_custom" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>